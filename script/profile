#!/usr/bin/env bash

function profile {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  PATH="$shome/bin:$PATH"

  case "$(uname -s)" in
    Linux)
      PATH="$shome/vendor/jdk1.8.0_74/bin:$PATH"
      export JAVA_HOME="$shome/vendor/jdk1.8.0_74"
      ;;
  esac
}

profile

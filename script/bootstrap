#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  source "$shome/script/profile"

  mkdir -p "${BASEBOX_CACHE}/cache/ivy2" "${BASEBOX_CACHE}/cache/m2"

  local cookie='oraclelicense=accept-securebackup-cookie;gpw_e24=http://edelivery.oracle.com'

  local url_jdk_Darwin='http://download.oracle.com/otn-pub/java/jdk/8u74-b02/jdk-8u74-macosx-x64.dmg'
  local url_jdk_Linux='http://download.oracle.com/otn-pub/java/jdk/8u74-b02/jdk-8u74-linux-x64.tar.gz'

  local url_jdk="url_jdk_$(uname -s)"
  local fnm_jdk="$(basename "${!url_jdk}")"
  cache curl "$fnm_jdk" "${!url_jdk}" --cookie "$cookie"

  case "$(uname -s)" in
    Darwin)
      hdiutil attach "${BASEBOX_CACHE}/curl/$fnm_jdk"
      block compile pkg "/Volumes/JDK 8 Update 74/JDK 8 Update 74.pkg"
      hdiutil detach "/Volumes/JDK 8 Update 74"
      ;;
    Linux)
      mkdir -p vendor
      pushd vendor
      tar xvfz "${BASEBOX_CACHE}/curl/$fnm_jdk"
      popd
      ;;
  esac
}

bootstrap
